<ul>
  <% @genres.each do |genre| %>
    <li>
      <div><%= link_to genre.name, genre %></div>
      <% if current_user_admin? %>
      <div>
        <%= link_to 'Edit', edit_genre_path(genre), class: 'button' %> |
        <%= link_to 'Delete', genre, class: 'button', method: :delete, data: { confirm: "Are you sure you want to delete this genre?" }, class: 'button' %>
      </div>
      <% end %>
    </li>
  <% end %>
</ul>

<% if current_user_admin? %>
  <section class="admin">
    <%= link_to 'Add new genre', new_genre_path, class: 'button' %>
  </section>
<% end %>
