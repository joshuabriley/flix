<h1>Reivews for <%= link_to @movie.title, @movie %></h1>
<% if @reviews.count > 0 %>
  <ul class="reviews">
    <% @reviews.each do |review| %>
      <li>
        <%= render "shared/stars", percent: review.stars_as_percent %>
        <p>
          <%= review.name %>
          <span class="date">
            <%= time_ago_in_words(review.created_at) %> ago
          </span>
        </p>
        <p>
          <%= review.comment %>
        </p>
        <%= link_to 'Edit Review', edit_movie_review_path(@movie, review), class: 'button' %>
        <%= link_to 'Delete Review', [@movie, review], class: 'button', method: :delete, data: { confirm: "Are you sure you want to delete this review?" }%>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No reviews yet.</p>
<% end %>
